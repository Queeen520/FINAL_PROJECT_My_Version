{% extends 'base.html.twig' %} {% block title %}Course{% endblock %} {% block
body %}
<div class="container mb-4 mt-4 p-4">
  <h1>Overview</h1>

  <table class="table w-100">
    <tbody>
      <tr>
        <img
          src="{{asset('pictures/') ~ course.fkCourseCategory.image}}"
          alt="image"
          width="150" />
      </tr>
      <tr>
        <th>Course:</th>
        <td>{{ course.fkCourseCategory.name }}</td>
      </tr>
      <tr>
        <th>Description</th>
        <td>{{ course.fkCourseCategory.description }}</td>
      </tr>
      <tr>
        <th>StartTime</th>
        <td>
          {{ course.startTime ? course.startTime|date('Y-m-d H:i:s') : '' }}
        </td>
      </tr>
      <tr>
        <th>EndTime</th>
        <td>{{ course.endTime ? course.endTime|date('Y-m-d H:i:s') : '' }}</td>
      </tr>
      <tr>
        <th>Price Student</th>
        <td>{{ course.fkPrice.studentPrice }} €</td>
      </tr>
      <tr>
        <th>Price Business</th>
        <td>{{ course.fkPrice.businessPrice }} €</td>
      </tr>
      <tr>
        <th>Price Private</th>
        <td>{{ course.fkPrice.privatePrice }} €</td>
      </tr>
    </tbody>
  </table>
  <a class="btn btn-outline-danger" href="{{ path('app_course_index') }}"
    >Go Back</a
  >
</div>

{% endblock %}
