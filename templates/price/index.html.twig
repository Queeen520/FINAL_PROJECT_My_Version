{% extends 'base.html.twig' %} {% block title %}Price index{% endblock %} {%
block body %}
<div class="container p-4 w-100">
  <h1>Price index</h1>

  <table class="table p-2">
    <thead>
      <tr class="bg-light border-bottom border-secondary">
        <th>Name</th>
        <th>Student Price</th>
        <th>Business Price</th>
        <th>Private Price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {% for price in prices %}
      <tr>
        <td>
          <b>{{ price.name }}</b>
        </td>
        <td>€ {{ price.studentPrice }}</td>
        <td>€ {{ price.businessPrice }}</td>
        <td>€ {{ price.privatePrice }}</td>

        <td>
          <a
            class="btn btn-outline-dark me-2"
            href="{{ path('app_price_show', { id: price.id }) }}"
            >show</a
          >
          <a
            class="btn btn-outline-dark ms-2"
            href="{{ path('app_price_edit', { id: price.id }) }}"
            >edit</a
          >
        </td>
      </tr>
      {% else %}
      <tr>
        <td colspan="5">no records found</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>

  <a class="btn btn-outline-success" href="{{ path('app_price_new') }}"
    >Create new</a
  >
</div>
{% endblock %}
