{% extends 'base.html.twig' %} {% block title %}Price{% endblock %} {% block
body %}
<div class="container">
  <h1>Price</h1>
  <div
    class="container mb-4 mt-4 p-4 border border-secondary rounded border-opacity-25">
    <table class="table">
      <tbody>
        <tr>
          <th>Name</th>
          <th>Student Price</th>
          <th>Business Price</th>
          <th>Private Price</th>
        </tr>

        <tr>
          <td>{{ price.name }}</td>
          <td>€ {{ price.studentPrice }}</td>
          <td>€ {{ price.businessPrice }}</td>
          <td>€ {{ price.privatePrice }}</td>
        </tr>
      </tbody>
    </table>

    <div class="d-inline-flex">
      {{ include("price/_delete_form.html.twig") }}
    </div>
    <a
      class="btn btn-outline-secondary"
      href="{{ path('app_price_edit', { id: price.id }) }}"
      >Edit</a
    >
  </div>
  <a href="{{ path('app_price_index') }}">Back</a>
</div>
{% endblock %}
