{% extends 'base.html.twig' %} {% block title %}Image{% endblock %} {% block
body %}
<div class="container">
  <h1>Image</h1>
  <div
    class="container mb-4 mt-4 p-4 border border-secondary rounded border-opacity-25">
    <table class="table">
      <tbody>
        <tr>
          <th>Id</th>
          <td>{{ image_gallery.id }}</td>
        </tr>
        <tr>
          <th>Description</th>
          <td>{{ image_gallery.description }}</td>
        </tr>
        <tr>
          <th>Image</th>
          <td>{{ image_gallery.image }}</td>
          <td>
            <img
              src="{{asset('pictures/') ~ image_gallery.image}}"
              alt="image"
              width="150" />
          </td>
        </tr>
      </tbody>
    </table>

    <a href="{{ path('app_image_gallery_edit', { id: image_gallery.id }) }}"
      >Edit</a
    >

    {{
      include("image_gallery/_delete_form.html.twig", {
        button_label: "Delete"
      })
    }}
  </div>
  <a href="{{ path('app_image_gallery_index') }}">Back</a>
</div>
{% endblock %}
