{% extends 'base.html.twig' %} {% block title %}Login{% endblock %} {% block body %} {% include 'user_navbar.html.twig'
%}
<h1 id="please-sign-in" class="h3 py-3">Please login</h1>
<form class="d-flex flex-column justify-content-center align-items-center" method="post">
    {% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %} {% if app.user %}
    <div class="mb-3">
        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
    </div>
    {% endif %}

    <label class="email-label" for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control w-25 mb-3"
        autocomplete="email" placeholder="Please enter your email" required autofocus>
    <label class="password-label" for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control w-25 mb-3"
        autocomplete="current-password" placeholder="Please enter your password" required>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


    <button class="btn btn-lg" type="submit">
        Login
    </button>
</form>
</div>
</div>
{% endblock %}